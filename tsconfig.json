{
	"extends": "astro/tsconfigs/strict",
	"include": [".astro/types.d.ts", "**/*"],
	"exclude": ["dist"],
	"compilerOptions": {
		"strictNullChecks": true,
		"allowJs": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"],
			"@types": ["src/types.ts"],
			"@lib/*": ["src/lib/*"],
			"@assets/*": ["src/assets/*"],
			"@styles/*": ["src/styles/*"],
			"@components/*": ["src/components/*"],
			"@layouts/*": ["src/layouts/*"],
			"@pages/*": ["src/pages/*"]
		},
		"jsx": "react-jsx",
		"jsxImportSource": "react"
	}
}
